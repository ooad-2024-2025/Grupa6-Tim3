@model RealEstateHub.Models.Kriterij

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Dodaj kriterij</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="obavjestenjeId" class="control-label"></label>
                <select asp-for="obavjestenjeId" class ="form-control" asp-items="ViewBag.obavjestenjeId"></select>
            </div>
            <div class="form-group">
                <label asp-for="vrijednost" class="control-label"></label>
                <input asp-for="vrijednost" class="form-control" />
                <span asp-validation-for="vrijednost" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Dodaj kriterij" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Vrati se na listu kriterija</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
