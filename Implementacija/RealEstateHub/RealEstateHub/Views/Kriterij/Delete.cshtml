@model RealEstateHub.Models.Kriterij

@{
    ViewData["Title"] = "Delete";
}

<h1>Obriši kriterij</h1>

<h3>Da li ste sigurni da želite da obrišete kriterij?</h3>
<div>
    <h4>Kriterij</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.vrijednost)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.vrijednost)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="kriterijId" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se na listu kriterija</a>
    </form>
</div>
