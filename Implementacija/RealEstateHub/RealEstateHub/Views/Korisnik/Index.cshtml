@model IEnumerable<RealEstateHub.Models.Korisnik>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista korisnika</h1>

<p>
    <a asp-action="Create">Dodaj novog korisnika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.imeKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.prezimeKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.emailKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lozinkaKorisnika)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojTelefona)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datumPridruzivanja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.imeKorisnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.prezimeKorisnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.emailKorisnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lozinkaKorisnika)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brojTelefona)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.datumPridruzivanja)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.korisnikId">Uredi</a> |
                    <a asp-action="Details" asp-route-id="@item.korisnikId">Detalji</a> |
                    <a asp-action="Delete" asp-route-id="@item.korisnikId">Obriši</a>
                </td>
            </tr>
        }
    </tbody>
</table>