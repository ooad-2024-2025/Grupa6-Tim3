@model RealEstateHub.Models.ApplicationUser

@{
    ViewData["Title"] = "Obriši korisnika";
}

<h1>Obriši korisnika</h1>

<h3>Da li ste sigurni da želite da obrišete korisnika?</h3>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Ime</dt>
        <dd class="col-sm-10">@Model.FirstName</dd>

        <dt class="col-sm-2">Prezime</dt>
        <dd class="col-sm-10">@Model.LastName</dd>

        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>

        <dt class="col-sm-2">Telefon</dt>
        <dd class="col-sm-10">@Model.PhoneNumber</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Vrati se na listu korisnika</a>
    </form>
</div>
