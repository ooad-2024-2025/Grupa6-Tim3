@model IEnumerable<RealEstateHub.Models.Oglas>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista oglasa</h1>

<p>
    <a asp-action="Create">Dodaj novi oglas</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.jeAktivan)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.datumPostavljanja)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojPregleda)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.jeAktivan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.datumPostavljanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.brojPregleda)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.oglasId">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.oglasId">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.oglasId">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
