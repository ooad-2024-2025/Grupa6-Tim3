@model RealEstateHub.Models.FilterNekretnina

@{
    ViewData["Title"] = "Details";
}

<h1>Detalji o filteru</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.minCijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.minCijena)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.maxCijena)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maxCijena)
        </dd>

        <dt class="col-sm-2">
            Minimalan broj soba
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.minBrojSoba)
        </dd>

        <dt class="col-sm-2">
            Maksimalan broj soba
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maxBrojSoba)
        </dd>

        <dt class="col-sm-2">
            Minimalna kvadratura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.minKvadratura)
        </dd>

        <dt class="col-sm-2">
            Maksimalna kvadratura
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.maxKvadratura)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.tipNekretnine)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.tipNekretnine)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.filterNekretninaId">Uredi filter</a> |
    <a asp-action="Index">Vrati se na listu filtera</a>
</div>
