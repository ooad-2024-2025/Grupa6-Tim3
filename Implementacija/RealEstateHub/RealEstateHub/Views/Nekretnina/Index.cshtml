@model IEnumerable<RealEstateHub.Models.Nekretnina>
@using System.Security.Claims

@{
    ViewData["Title"] = "Index";
    // Dobavi ID trenutno prijavljenog korisnika
    var currentUserId = User.FindFirstValue(System.Security.Claims.ClaimTypes.NameIdentifier);
}

<h1>Lista nekretnina</h1>

<p>
    <a asp-action="Create">Dodaj novu nekretninu</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.naslov)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.opisNekretnine)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.cijena)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.kvadratura)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.lokacija)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.brojSoba)
            </th>         
            <th>
                @Html.DisplayNameFor(model => model.vrstaNekretnine)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.naslov)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.opisNekretnine)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cijena)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.kvadratura)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lokacija)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.brojSoba)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.vrstaNekretnine)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalji</a>
                    @if (item.VlasnikId == currentUserId || User.IsInRole("Administrator"))
                    {
                        <nobr>|</nobr>
                        <a asp-action="Edit" asp-route-id="@item.Id">Uredi</a>
                        <nobr>|</nobr>
                        <a asp-action="Delete" asp-route-id="@item.Id">Obriši</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>