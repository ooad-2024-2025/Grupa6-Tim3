@model RealEstateHub.Models.Lokacija

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">Dodaj novu lokaciju</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="nekretninaId" class="control-label"></label>
                <input asp-for="nekretninaId" class="form-control" />
                <span asp-validation-for="nekretninaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="grad" class="control-label"></label>
                <input asp-for="grad" class="form-control" />
                <span asp-validation-for="grad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="adresa" class="control-label"></label>
                <input asp-for="adresa" class="form-control" />
                <span asp-validation-for="adresa" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="latituda" class="control-label"></label>
                <input asp-for="latituda" class="form-control" />
                <span asp-validation-for="latituda" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="longituda" class="control-label"></label>
                <input asp-for="longituda" class="form-control" />
                <span asp-validation-for="longituda" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Dodaj lokaciju" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Vrati se na listu lokacija</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
