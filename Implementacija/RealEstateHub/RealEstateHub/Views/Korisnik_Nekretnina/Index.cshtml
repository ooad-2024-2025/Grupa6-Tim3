@model IEnumerable<RealEstateHub.Models.Korisnik_Nekretnina>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Napravi novo</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nekretninaId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.korisnikId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nekretninaId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.korisnikId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.kn_id">Uredi</a> |
                <a asp-action="Details" asp-route-id="@item.kn_id">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.kn_id">Obrisi</a>
            </td>
        </tr>
}
    </tbody>
</table>
