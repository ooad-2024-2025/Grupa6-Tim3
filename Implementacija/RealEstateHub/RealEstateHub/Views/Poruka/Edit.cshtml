@model RealEstateHub.Models.Poruka

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">Uredi poruku</h1>

<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="porukaId" />
            <div class="form-group">
                <label asp-for="posiljalacId" class="control-label"></label>
                <input asp-for="posiljalacId" class="form-control" />
                <span asp-validation-for="posiljalacId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="primalacId" class="control-label"></label>
                <input asp-for="primalacId" class="form-control" />
                <span asp-validation-for="primalacId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="sadrzaj" class="control-label"></label>
                <input asp-for="sadrzaj" class="form-control" />
                <span asp-validation-for="sadrzaj" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="procitano" /> @Html.DisplayNameFor(model => model.procitano)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="datumSlanja" class="control-label"></label>
                <input asp-for="datumSlanja" class="form-control" />
                <span asp-validation-for="datumSlanja" class="text-danger"></span>
            </div>
            <div class="form-group text-center">
                <input type="submit" value="Sačuvaj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div class="text-center mt-3">
    <a asp-action="Index">Vrati se na listu poruka</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
